<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <!-- App Theme -->
    <style name="AppTheme.NoActionBar" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Light App Bar Theme -->
    <style name="AppTheme.AppBar.Light" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <!-- Dark App Bar Theme -->
    <style name="AppTheme.AppBar.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Light Overlay Theme -->
    <style name="AppTheme.Overlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Dark Overlay Theme -->
    <style name="AppTheme.Overlay.Dark" parent="ThemeOverlay.AppCompat.Dark"/>

    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button"/>

    <style name="ButtonStyle.Colored" parent="Widget.AppCompat.Button.Colored"/>

    <style name="ButtonStyle.Borderless" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="ButtonStyle.Borderless.ColoredText" parent="Widget.AppCompat.Button.Borderless.Colored"/>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton"/>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton"/>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox"/>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch"/>

    <!-- Text Styles -->
    <style name="TextStyle" parent="TextAppearance.AppCompat"/>

    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title"/>

    <style name="TextStyle.Body1" parent="TextAppearance.AppCompat.Body1"/>

    <style name="TextStyle.Body2" parent="TextAppearance.AppCompat.Body2"/>

    <!-- Edit Text Styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText"/>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout"/>

    <!-- Spinner Styles -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner"/>

    <style name="SpinnerStyle.Underlined" parent="Widget.AppCompat.Spinner.Underlined"/>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar"/>

    <style name="ProgressBarStyle.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal"/>

    <!-- Slider Styles -->
    <style name="SeekbarStyle" parent="Widget.AppCompat.SeekBar"/>

    <!-- Image Styles -->
    <style name="ImageStyle">
        <item name="android:tint">?colorAccent</item>
    </style>

</resources>
