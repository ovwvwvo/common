<?xml version="1.0" encoding="UTF-8" ?>
<resources>

    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/color_grey_64</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:dialogTheme">@style/Theme.Dialog</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Black">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="Theme.Dialog.Bottom">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Dialog.Progressbar" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- ThemeOverlay -->
    <eat-comment/>

    <style name="ThemeOverlay.MenuOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/color_grey_22</item>
    </style>

    <!-- Widget -->
    <eat-comment/>

    <style name="Widget.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_grey_97</item>
        <item name="android:actionBarSize">56dp</item>
    </style>

    <style name="Widget.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.EditText.Normal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Black</item>
        <item name="android:textColorHint">@color/color_grey_80</item>
    </style>

    <style name="Widget.TextView.SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.DropDownItem" parent="@android:style/Widget.DropDownItem">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Widget.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:listChoiceBackgroundIndicator">@null</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- TextAppearance -->
    <eat-comment/>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_grey_22</item>
        <item name="android:textColorHint">@color/color_grey_80</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <style name="TextAppearance.H2">
        <item name="android:textSize">@dimen/text_size_large_2</item>
    </style>

    <style name="TextAppearance.H2.LightGrey">
        <item name="android:textColor">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.H2.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.H2.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.H2.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_size_large_1</item>
    </style>

    <style name="TextAppearance.H1.LightGrey">
        <item name="android:textColor">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.H1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H1.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.H1.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.T1"/>

    <style name="TextAppearance.T1.Grey">
        <item name="android:textColor">@color/color_grey_50</item>
    </style>

    <style name="TextAppearance.T1.LightGrey">
        <item name="android:textColor">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.T1.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.T1.DarkHint">
        <item name="android:textColorHint">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.LightGrey">
        <item name="android:textColor">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.T2">
        <item name="android:textSize">@dimen/text_size_small_1</item>
    </style>

    <style name="TextAppearance.T2.Grey">
        <item name="android:textColor">@color/color_grey_50</item>
    </style>

    <style name="TextAppearance.T2.LightGrey">
        <item name="android:textColor">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.T2.LighterGrey">
        <item name="android:textColor">@color/color_grey_80</item>
    </style>

    <style name="TextAppearance.T2.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.ST">
        <item name="android:textSize">@dimen/text_size_small_2</item>
    </style>

    <style name="TextAppearance.ST.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.ST.Grey">
        <item name="android:textColor">@color/color_grey_50</item>
    </style>

    <style name="TextAppearance.ST.LightGrey">
        <item name="android:textColor">@color/color_grey_64</item>
    </style>

    <style name="TextAppearance.ST.LighterGrey">
        <item name="android:textColor">@color/color_grey_80</item>
    </style>

    <style name="TextAppearance.TT">
        <item name="android:textSize">@dimen/text_size_small_3</item>
    </style>

    <style name="TextAppearance.TT.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
